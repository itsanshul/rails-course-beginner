<h1 align="center">All Categories</h1>
<div align="center">
    <% @categories.each do |cat| %>
    <ul class="listing">
        <div class="row">
          <div class="well col-md-4 col-md-offset-4">
            <li class="article-title"><h2><%= link_to cat.name, category_path(cat) %></h2></li>
            <li><small><%= pluralize(cat.articles.count, "article") if cat.articles %></small></li>
          </div>
        </div>
    </ul>
  <% end %>
</div>
<div align="center">
  <%= will_paginate %>
</div>

