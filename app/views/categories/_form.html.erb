<%= render 'layouts/errors', obj: @category %>
<%= form_for(@category, :html => {class: "form-horizontal", role: "form"}) do |f| %>
  <div class="container">
    <div class="row">
    <div class="col-xs-offset-1 col-xs-10">
  <div class="form-group">
    <div class="col-sm-2 control-label">
      <%= f.label :name %>
    </div>
    <div class="col-sm-8">
      <%= f.text_field :name, class: "form-control", placeholder: "Name of Category", autofocus: true %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary btn-lg" %>
    </div>
  </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-8">
            [<%= link_to "Back to Category Listing", categories_path %>]
        </div>
      </div>

      </div>
      </div>
  </div>
<% end %>