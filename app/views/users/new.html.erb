<%= render 'layouts/errors', obj: @user %>
<h1 align="center">Signup for Aplha Blog</h1>
<%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>
  <div class="container">
    <div class="row">
    <div class="col-xs-offset-1 col-xs-10">
  <div class="form-group">
    <div class="col-sm-2 control-label">
      <%= f.label :username %>
    </div>
    <div class="col-sm-8">
      <%= f.text_field :username, class: "form-control", placeholder: "Enter Username", autofocus: true %>
    </div>
  </div>
  <div class="form-group">
    <div  class="col-sm-2 control-label">
      <%= f.label :email %>
    </div>
    <div class="col-sm-8">
      <%= f.email_field :email, class: "form-control", placeholder: "Enter Email" %>
    </div>
  </div>
      <div class="form-group">
    <div  class="col-sm-2 control-label">
      <%= f.label :password %>
    </div>
    <div class="col-sm-8">
      <%= f.password_field :password, class: "form-control", placeholder: "Enter Password" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit 'Sign up', class: "btn btn-primary btn-lg" %>
    </div>
  </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-8">
            [<%= link_to "Back to Articles Listing", articles_path %>]
            [<%= link_to "Add new Article", new_article_path %>]
        </div>
      </div>

      </div>
      </div>
  </div>
<% end %>